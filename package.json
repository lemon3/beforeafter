{
  "name": "beforeafter",
  "version": "0.2.1",
  "description": "before and after image comparison slider",
  "author": "wolfgang jungmayer",
  "license": "MIT",
  "browser": "dist/beforeafter.umd.js",
  "type": "module",
  "main": "dist/beforeafter.umd.js",
  "module": "./dist/beforeafter.js",
  "exports": {
    ".": {
      "import": "./dist/beforeafter.js",
      "require": "./dist/beforeafter.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "docs": "vite build --config vite.config.pages.js",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.js'",
    "format": "prettier --write 'src/**/*.js'",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "browserslistupdate": "npx update-browserslist-db@latest"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "index.js"
  ],
  "keywords": [
    "beforeafter",
    "before-after",
    "before-after-slider",
    "images",
    "slider",
    "compare",
    "compare-slider",
    "compare-viewer",
    "comparison",
    "comparison-slider",
    "comparison-viewer",
    "image-compare",
    "image-compare-viewer",
    "image-compare-slider",
    "image-comparison",
    "image-comparison-slider",
    "image-comparison-viewer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon3/beforeafter.git"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-class-properties": "^7.24.1",
    "@babel/preset-env": "^7.24.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.5.5",
    "prettier": "^3.2.5",
    "vite": "^5.2.8",
    "vite-plugin-babel": "^1.2.0",
    "vite-plugin-banner": "^0.7.1",
    "vitest": "^1.5.0"
  }
}
